<div class="login-form">
  <% form_tag do %>
    <table>
      <tr>
        <th><label for="login"><%= _("Login:") %></label></th>
        <td><%= text_field_tag 'login' %></td>
      </tr>

      <tr>
        <th><label for="password"><%= _("Password:") %></th>
        <td><%= password_field_tag 'password' %></td>
      </tr>

      <tr>
        <td colspan="2">
          <label for="remember_me"><%= _("Remember me:") %></label>
          <%= check_box_tag 'remember_me' %>
        </td>
      </tr>
    </table>

    <p class="submit"><%= submit_tag(_('Log in')) %></p>
  <% end %>
</div>

<%= javascript_tag("$('login').focus();") %>
